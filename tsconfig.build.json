{
  "compilerOptions": {
    "module": "ES2020",
    "noImplicitAny": true,
    "noLib": false,
    "target": "ES2020",
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "allowJs": true,
    "lib": ["ES2020", "dom"]
  },
  "exclude": ["node_modules", "lib", "**/*.spec.ts", "**/*.config.js"]
}
